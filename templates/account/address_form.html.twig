{% extends 'base.html.twig' %}

{% block title %}Gérer une adresse - SymfonyMarket{% endblock %}

{% block content %}
    <h1>Gérer une adresse</h1>
    <a href="{{ path('account') }}">Retour à mon compte.</a>
    <a href="{{ path('account_address') }}">Retour à mes addresses.</a>
    <hr>
    <div id="form-container" class="mb-5">
        {{ form_start(form) }}
            <div class="row">
                <div class="col-md-4">
                    {{ form_row(form.name) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.firstname) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.lastname) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-5">
                    {{ form_row(form.address) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.postal) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.company) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    {{ form_row(form.city) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.country) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.phone) }}
                </div>
            </div>
            {{ form_row(form.submit) }}
        {{ form_end(form) }}
    </div>

{% endblock %}
