{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - Symfony Market{% endblock %}

{% block content %}
    <h1>Mon produit</h1>

    <div class="row product-container">
        <div class="col-md-5">
            <div class="product-item">
                <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
            </div>
        </div>
        <div class="col-md-7 my-auto">
            <h1>
                {{ product.name }}
            </h1>
            <span class="product-subtitle">
                {{ product.subtitle }}
            </span>
            <br>
            <span class="product-page-price">
                {{ (product.price / 100) | number_format(2, ',') }}â‚¬
            </span>
            <hr>
            <p>
                {{ product.description }}
            </p>
            <hr>
            <a href="{{ path('add_to_cart', {'id': product.id}) }}" class="btn btn-primary">
                Ajouter au panier
            </a>
        </div>
    </div>
{% endblock %}
